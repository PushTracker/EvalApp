{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    }
  },
  "exclude": ["node_modules", "platforms", "nativescript-bluetooth"]
  // "include": ["./app", "../nativescript-bluetooth/bluetooth.ts"]
}
